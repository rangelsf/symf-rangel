{% extends 'base.html.twig'%}

{% block title %}Synf Crud{% endblock %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th> Titulo</th>
                    <th> Ação </th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                       <td>{{ article.title }} </td>
                       <td> 
                            <a href="/article/{{ article.id }}" class="btn btn-dark"> Mostrar</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-white"> Editar</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}"> Deletar</a>
                            
                            
                       </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p> nao achou artigos</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"> </script>

{% endblock %}